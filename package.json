{
  "name": "nosh-ui",
  "description": "The user interface for a restaurant recommendation service.",
  "scripts": {
    "dev": "webpack-dev-server --open --config webpack.dev.js",
    "build": "(rm -r ./dist || true) && webpack --config webpack.prod.js",
    "test:lint": "",
    "test:format": "",
    "test:typescript": "tsc --skipLibCheck",
    "test:unit": "",
    "test:ci": "npm run test:lint && npm run test:format && npm run test:typescript && npm run test:unit",
    "docker:build": "docker build -t nosh-ui-nginx .",
    "docker:startlocal": "(docker stop nosh-ui-nginx-local && docker rm nosh-ui-nginx-local) || true && docker run --name nosh-ui-nginx-local -d -p 8080:80 nosh-ui-nginx && echo 'Running on http://localhost:8080'",
    "docker:build:startlocal": "npm run docker:build && npm run docker:startlocal",
    "browserslist": "npx browserslist"
  },
  "author": "Joe Brady",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Joe-Brady/nosh-ui.git"
  },
  "dependencies": {
    "core-js": "^3.2.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-loadable": "^5.5.0",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "regenerator-runtime": "^0.13.3",
    "styled-components": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-router": "^5.0.3",
    "@types/react-router-dom": "^4.3.5",
    "@types/styled-components": "^4.1.18",
    "babel-loader": "^8.0.6",
    "compression-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "html-webpack-plugin": "^3.2.0",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3",
    "webpack-cli": "^3.3.7",
    "webpack-dev-server": "^3.8.0",
    "webpack-merge": "^4.2.2"
  }
}
